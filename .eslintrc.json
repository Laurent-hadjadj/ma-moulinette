{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "dollar-sign",
        "html"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "dollar-sign/dollar-sign": [
            2,
            "ignoreProperties"
        ]
    },
    "settings": {
        "html/html-extensions": [
        ".html",
        ".twig"
        ]
    }
}
